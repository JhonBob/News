<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_refresh_header_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_refresh_pull_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip">
            <ImageView
                android:id="@+id/iv_refresh_header_view_pull_down_arrow"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/common_listview_headview_red_arrow"/>
            <ProgressBar
                android:id="@+id/iv_refresh_header_view_pull_down_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/iv_refresh_header_view_pull_down_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉刷新"
                android:textColor="#FF0000"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/iv_refresh_header_view_pull_down_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最后刷新1990-09-09 09:09:09"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>