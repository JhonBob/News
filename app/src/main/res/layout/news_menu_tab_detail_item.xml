<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:padding="10dip">
    <ImageView
        android:id="@+id/iv_news_menu_tab_detail_item_image"
        android:layout_width="90dip"
        android:layout_height="60dip"
        android:scaleType="fitXY"
        android:background="@android:color/darker_gray"
        android:padding="1dip"
        android:src="@mipmap/news_pic_default"/>


    <TextView
        android:id="@+id/iv_news_menu_tab_detail_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_news_menu_tab_detail_item_image"
        android:layout_marginLeft="5dip"
        android:lines="2"
        android:text="android"/>

    <TextView
        android:id="@+id/iv_news_menu_tab_detail_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="5dip"
        android:textColor="@android:color/darker_gray"
        android:layout_alignLeft="@id/iv_news_menu_tab_detail_item_title"
        android:layout_below="@id/iv_news_menu_tab_detail_item_title"
        android:text="2016-01-18 18:45"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/icon_news_comment_num"/>

</RelativeLayout>