<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="185dip">

<com.bob.news.view.HorizontalScrollViewPager
    android:id="@+id/vp_news_menu_tab_detail_top_news"
    android:layout_width="match_parent"
    android:layout_height="185dip">
</com.bob.news.view.HorizontalScrollViewPager>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff0000"
    android:gravity="center_vertical"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <TextView
        android:id="@+id/tv_news_menu_tab_detail_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="图片描述信息" />

    <LinearLayout
        android:id="@+id/ll_news_menu_tab_detail_points"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_alignTop="@+id/tv_news_menu_tab_detail_dec"
        android:layout_alignBottom="@+id/tv_news_menu_tab_detail_dec">
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>